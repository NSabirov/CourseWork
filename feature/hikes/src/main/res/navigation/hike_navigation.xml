<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hike_nav_graph"
    app:startDestination="@id/hikesFragment">

    <fragment
        android:id="@+id/hikesFragment"
        android:name="com.sabirov.hikes.HikesFragment"
        android:label="fr_hikes"
        tools:layout="@layout/fr_hikes">
        <action
            android:id="@+id/action_hikesFragment_to_hikeInfoFragment"
            app:destination="@id/hikeInfoFragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"  />
    </fragment>

    <fragment android:id="@+id/hikeInfoFragment"
        android:name="com.sabirov.hike_info.HikeInfoFragment"
        android:label="fr_hike_info"
        tools:layout="@layout/fr_hike_info"/>
</navigation>