<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sabirov.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fr_home"
        >
        <deepLink app:uri="myapp://ex.my.app/home_fragment"/>
        <action
            android:id="@+id/action_homeFragment_to_createFragment"
            app:destination="@id/createFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/createFragment"
        android:name="com.sabirov.create.CreateFragment"
        android:label="fragment_create"
        tools:layout="@layout/fr_create">
        <deepLink app:uri="myapp://ex.my.app/create_fragment"/>
    </fragment>
</navigation>