<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/authorizationFragment">

    <fragment
        android:id="@+id/authorizationFragment"
        android:name="com.sabirov.authorization.AuthorizationFragment"
        android:label="fr_authorization"
        tools:layout="@layout/fr_authorization">
        <action
            android:id="@+id/action_authorizationFragment_to_logInFragment"
            app:destination="@id/logInFragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_authorizationFragment_to_registrationFragment"
            app:destination="@id/registrationFragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/logInFragment"
        android:name="com.sabirov.logIn.LogInFragment"
        android:label="LogInFragment"
        tools:layout="@layout/fr_log_in" />

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.sabirov.registration.RegistrationFragment"
        android:label="registrationFragment"
        tools:layout="@layout/fr_registration" />

    <action android:id="@+id/action_authFragment_to_campsFragment"
        app:destination="@id/camps_nav_graph"
        app:popUpTo="@id/auth_nav_graph"
        app:popUpToInclusive="true"
        app:enterAnim="@anim/enter_from_right"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/enter_from_left"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
</navigation>