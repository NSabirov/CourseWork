<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/authorizationFragment">

    <fragment
        android:id="@+id/authorizationFragment"
        android:name="com.sabirov.authorization.AuthorizationFragment"
        android:label="fr_authorization"
        tools:layout="@layout/fr_authorization">
        <deepLink app:uri="myapp://ex.my.app/auth_fragment"/>
        <action
            android:id="@+id/action_authorizationFragment_to_verificationFragment"
            app:destination="@id/verificationFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>
    <fragment
        android:id="@+id/verificationFragment"
        android:name="com.sabirov.verification.VerificationFragment"
        android:label="VerificationFragment" />
</navigation>